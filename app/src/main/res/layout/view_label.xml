<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/label_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/label_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_biaoqian_i"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:text="解放军就"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp">

        <com.customview.WaveView
            android:id="@+id/wave"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/label_icon"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/dot" />
    </RelativeLayout>

    <TextView
        android:id="@+id/label_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_biaoqian"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="6dp"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:text="标签标签标签"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="invisible" />

</LinearLayout>